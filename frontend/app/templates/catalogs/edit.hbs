{{!-- Page to edit catalog --}}
{{#with (changeset model skipValidate=true) as |changeset|}}
<div class="edit">
  <h2 class="title">{{t (humanize 'Edit catalog')}}</h2>

  {{!--
    Actions to save or cancel changes;
    or delete catalog.
  --}}
  <div class="actions">
    <button type="button" class="btn save" title="Save new catalog" {{action 'save' changeset model}}>Save</button>
    <button type="button" class="btn cancel" title="Cancel" {{action 'cancel' changeset model}}>Cancel</button>
    <button type="button" class="btn delete" title="Delete this item" {{action 'delete' changeset model}}>Delete</button>
  </div>

  {{!-- Table to show details of catalog. --}}
  <table>
    <thead>
      <tr>
        <th>Property</th>
        <th>Data</th>
      </tr>
    </thead>
    <tbody>
      {{!-- Creating rows for attributes depending on the type of property --}}
      <tr>
        <td>{{t 'title'}}</td>
        <td align='middle'>{{handle-attribute model=changeset attribute='title' editable=true}}</td>
      </tr>
      <tr>
        <td>{{t 'description'}}</td>
        <td align='middle'>{{handle-attribute model=changeset attribute='description' editable=true}}</td>
      </tr>
      <tr>
        <td>{{t 'issued'}}</td>
        <td align='middle'>{{handle-attribute model=changeset attribute='issued' editable=true}}</td>
      </tr>
      <tr>
        <td>{{t 'modified'}}</td>
        <td align='middle'>{{handle-attribute model=changeset attribute='modified' editable=true}}</td>
      </tr>
      <tr>
        <td>{{t 'language'}}</td>
        <td align='middle'>{{handle-attribute model=changeset attribute='language' editable=true}}</td>
      </tr>
      <tr>
        <td>{{t 'license'}}</td>
        <td align='middle'>{{handle-attribute model=changeset attribute='license' editable=true}}</td>
      </tr>

      <tr><td>{{t 'publisher'}}</td><td align='middle'>{{edit-belongs-to relName=changeset.publisher relType="agent"}}</td></tr>
      <tr><td>{{t 'datasets'}}</td><td align='middle'>{{edit-has-many relName=changeset.datasets relType="dataset"}}</td></tr>

    </tbody>
  </table>
</div>
{{/with}}
